<table class="first_row">
	<td class="row_left round">	
		<table>
			<ul id="slideshow">
				<li><%= image_tag("1.jpg", :size=>"620x320", :alt=>"Marsa Alam") %></li>
				<li><%= image_tag("2.jpg", :size=>"620x320", :alt=>"Marsa Alam") %></li>
				<li><%= image_tag("3.jpg", :size=>"620x320", :alt=>"Marsa Alam") %></li>
				<li><%= image_tag("4.jpg", :size=>"620x320", :alt=>"Marsa Alam") %></li>
			</ul>
			<span class="arrow previous"></span>
			<span class="arrow next"></span>
		</table>
		
	</td>
	<td class="row_right round" style='vertical-align: top'>
		<% if signed_in? %> <!-- if not signed in, show sign in -->
			<table>
				<div id="calendar">
					<iframe src="https://www.google.com/calendar/b/0/embed?showTitle=0&amp;showNav=0&amp;showDate=0&amp;showPrint=0&amp;showCalendars=0&amp;showTz=0&amp;mode=AGENDA&amp;height=175&amp;wkst=1&amp;bgcolor=%23FFFFFF&amp;src=umcpcssa000%40gmail.com&amp;color=%235F6B02&amp;ctz=America%2FNew_York" style=" border-width:0 " width="325" height="200" frameborder="0" scrolling="no"></iframe>	
				</div>
				<%= render 'shared/user_info_feeds' %>
				<%= render 'links' %>
			</table>
		<% else %> <!-- if not signed in, show profile -->
			<table>
				<div id="sign_in">
					<%= link_to "Sign in", sign_in_path, :class => "sign_in_button round"%>
				</div>
				<div id="calendar_not_signed_in">
					<iframe src="https://www.google.com/calendar/b/0/embed?showTitle=0&amp;showNav=0&amp;showDate=0&amp;showPrint=0&amp;showCalendars=0&amp;showTz=0&amp;mode=AGENDA&amp;height=175&amp;wkst=1&amp;bgcolor=%23FFFFFF&amp;src=umcpcssa000%40gmail.com&amp;color=%235F6B02&amp;ctz=America%2FNew_York" style=" border-width:0 " width="325" height="200" frameborder="0" scrolling="no"></iframe>	
				</div>
				<%= render 'links' %>
			</table>
		<% end %>
	</td>
</table>
