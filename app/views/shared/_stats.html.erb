<% @user ||= current_user %>
<div class="stats">  
	<div summary="User stats">
		<a href="<%= user_path(current_user) %>">
			<span class="stat">
				<%= pluralize(current_user.microposts.count, "micropost") %>
			</span>
		</a><br />
		<a href="<%= following_user_path(@user) %>">
			<span id="following" class="stat">
				<%= pluralize(current_user.following.where("followed_id != #{current_user.id}").count, "following") %>
			</span>
		</a>
		<a href="<%= followers_user_path(@user) %>">
			<span id="followers" class="stat">                  
				<%= pluralize(current_user.followers.where("follower_id != #{current_user.id}").count, "follower") %>
			</span>
		</a><br />
		<a href="<%= clubs_user_path(@user) %>">
			<span id="clubs" class="stat">                  
				<%= pluralize(current_user.clubs.count, "club") %>
			</span>
		</a>
	</div>
</div>
