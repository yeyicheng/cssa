<h1>Sign in</h1>
<%= form_for(:session, :url => sessions_path) do |f| %>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</div>
	
	<div class="actions">
		<%= f.submit "Sign in" %>
	</div>
	<div id="remote">
        <div id="terms" class="box">
            <%= link_to "Terms of Service", "#" %> 
        </div>  
        <div id="services" class="box">
            <a href="/auth/facebook" class="services"><%= image_tag "facebook.png", :size => "64x64",  :alt => "Facebook" %>Facebook</a>
			<a href="/auth/google" class="services"><%= image_tag "google.png", :size => "80x80",  :alt => "Google" %>Google</a>
			<a href="/auth/qq_connect" class="services"><%= image_tag "google.png", :size => "80x80",  :alt => "Google" %>QQ</a>
		</div>
    </div>
<% end %>
<p>New user? <%= link_to "Sign up now!", sign_up_path %></p>
