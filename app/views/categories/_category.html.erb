<tr>
	<td>
		<%= link_to avatar_for(category, :medium), category %>
	</td>
	<td>
		<table>
			<td style='border-right: 1px solid #000'>
				<%= link_to category[:name], category %></td>
			<td><%= category[:description] %></td>
				<% if signed_in? and current_user.admin? %>
				<td><%= button_to "Delete", category, :method => :delete, :onclick => "return confirm('Are you sure?')",
					:title => "Delete #{category.name}", remote: true %></td>
				<% end %>
		</table>
	</td>
</tr>
