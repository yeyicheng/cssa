<table class="profile" summary="Profile information">
	<td class="main">
		<h1>
			<%= avatar_for @user, :medium %>
			<%= @user.name %>
		</h1>
		<%= render 'follow_form' if signed_in? %>
		<%= @user.email %>
		<% unless @microposts.empty? %>
			<%= will_paginate @microposts, :param_name => 'micro_page' %>
				<table class="microposts" summary="User microposts">
					<%= render @microposts %>
				</table>
			<%= will_paginate @microposts, :param_name => 'micro_page' %>
		<% end %>
	</td>
	<td class="side">
		<table>
			<%= render 'shared/user_info_feeds' %>
		</table>
	</td>
</table>
