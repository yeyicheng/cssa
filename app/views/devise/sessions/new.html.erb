<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<div><%= f.label :email %><br />
	<%= f.email_field :email %></div>

	<div><%= f.label :password %><br />
	<%= f.password_field :password %></div>
	
	<% if devise_mapping.rememberable? %>
	<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	<% end %>
	
	<div><%= f.submit "Sign in" %></div>
<% end %>
<div id="services" class="box">
	<a href="/users/auth/facebook" class="services"><%= image_tag "facebook.png", :size => "64x64",  :alt => "Facebook" %>Facebook</a>
	<a href="/users/auth/google" class="services"><%= image_tag "google.png", :size => "80x80",  :alt => "Google" %>Google</a>
	<a href="/users/auth/qq_connect" class="services"><%= image_tag "google.png", :size => "80x80",  :alt => "QQ" %>QQ</a>
	<a href="/users/auth/xiaonei" class="services"><%= image_tag "google.png", :size => "80x80",  :alt => "RenRen" %>RenRen</a>
</div>
