<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	<%= devise_error_messages! %>

	<div><%= f.label :name %><br />
	<%= f.text_field :name %></div>
	
	<div><%= f.label :email %><br />
	<%= f.email_field :email %></div>
	
	<div><%= f.label :password %><br />
	<%= f.password_field :password %></div>
	
	<div><%= f.label :password_confirmation %><br />
	<%= f.password_field :password_confirmation %></div>
	
	<div><%= f.submit "Sign up" %></div>
<% end %>

<div id="remote">
	<div id="terms" class="box">
		<%= link_to "Terms of Service", "#" %> 
	</div>  
	<div id="services" class="box">
		<a href="/users/auth/facebook" class="services"><%= image_tag "facebook.png", :size => "64x64",  :alt => "Facebook" %>Facebook</a>
		<a href="/users/auth/google" class="services"><%= image_tag "google.png", :size => "80x80",  :alt => "Google" %>Google</a>
		<a href="/users/auth/qq_connect" class="services"><%= image_tag "google.png", :size => "80x80",  :alt => "Google" %>QQ</a>
	</div>
</div>
<%= render "devise/shared/links" %>
