<%= render 'shared/error_messages', :object => f.object %>
<div class="field">
	<%= f.label :name %><br />
	<%= f.text_field :name %>
</div>
<div class="field">
	<%= f.label :category %><br />
	<%= f.select :category_id, Category.all.collect {|p| [p.name, p.id]} %>
</div>
<div class="field">
	<%= f.label :email %><br />
	<%= f.email_field :email %>
</div>
<div class="field">
	<%= f.label :description %><br />
	<%= f.text_area :description, value: "Please enter descriptions", onFocus: "clearContents(this);" %>
</div>
<div class="field">
	<%= f.label :avatar %><br />
	<%= f.file_field :avatar %>
</div>


